{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo [FORENSIC] Tool: $(jq -r '.tool_name') >> forensic.log"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*", 
        "hooks": [
          {
            "type": "command",
            "command": "echo [RESULT] Status: $(jq -r '.status // \"unknown\"') >> forensic.log"
          }
        ]
      }
    ]
  }
}